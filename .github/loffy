from .. import loader, utils
import asyncio
from telethon.tl.types import Message

def clear_channel(message):
    chat_id = message.chat.id
    messages = bot.get_chat_history(chat_id)
    for m in messages:
        try:
            bot.delete_message(chat_id, m.id)
        except:
            pass
    bot.reply_to(message, "–ö–∞–Ω–∞–ª –±—ã–ª –æ—á–∏—â–µ–Ω –æ—Ç —Å–æ–æ–±—â–µ–Ω–∏–π.")

bot.polling()
